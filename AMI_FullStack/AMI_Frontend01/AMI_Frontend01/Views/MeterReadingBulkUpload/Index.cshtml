@{
    ViewData["Title"] = "Bulk Reading Upload";
}

<div class="container mt-4">
    <div class="row">
        <!-- Left Column: Upload Form -->
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-speedometer2"></i> Upload Readings</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert @(ViewBag.IsSuccess == true ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                            <small>@ViewBag.Message</small>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-controller="MeterReadingBulkUpload" asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="csvFile" class="form-label fw-bold">Select CSV File</label>
                            <input type="file" class="form-control" name="csvFile" id="csvFile" accept=".csv" required>
                            <div class="form-text">
                                Must contain: <strong>MeterSerialNo, ReadingDate, Kwh</strong>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-cloud-upload"></i> Upload Readings
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Column: Instructions & Sample -->
        <div class="col-md-7">
            <div class="card bg-light border-0">
                <div class="card-body">
                    <h6 class="card-title text-dark border-bottom pb-2">CSV Requirements</h6>

                    <table class="table table-bordered table-sm bg-white" style="font-size: 0.9rem;">
                        <thead class="table-secondary">
                            <tr>
                                <th>Col Index</th>
                                <th>Header Name</th>
                                <th>Format / Validation</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>MeterSerialNo</td>
                                <td>Format: <code>MTR-xxxxx</code> (e.g., MTR-12345)</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>ReadingDate</td>
                                <td>YYYY-MM-DD (e.g., 2025-11-20)</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Kwh</td>
                                <td>Decimal > 0.01 (e.g., 150.5)</td>
                            </tr>
                        </tbody>
                    </table>

                    <h6 class="mt-3">Sample CSV Content:</h6>
                    <div class="position-relative">
                        <textarea class="form-control font-monospace" rows="5" readonly id="sampleText" style="font-size: 0.85rem; background-color: #2d2d2d; color: #f8f8f2;">
MeterSerialNo,ReadingDate,Kwh
MTR-12345,2025-11-20,120.5
MTR-67890,2025-11-21,95.0
MTR-54321,2025-11-22,210.75</textarea>

                        <div class="d-flex gap-2 mt-2">
                            <button class="btn btn-sm btn-outline-secondary" onclick="copySample()">
                                <i class="bi bi-clipboard"></i> Copy Text
                            </button>

                            <!-- Download Button using Data URI -->
                            <a id="downloadLink" href="#" class="btn btn-sm btn-outline-primary" onclick="downloadSample()">
                                <i class="bi bi-download"></i> Download Sample CSV
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function copySample() {
        var copyText = document.getElementById("sampleText");
        copyText.select();
        navigator.clipboard.writeText(copyText.value);
        alert("Sample copied to clipboard!");
    }

    function downloadSample() {
        // Get content
        var csvContent = document.getElementById("sampleText").value;

        // Create a blob
        var blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
        var url = URL.createObjectURL(blob);

        // Create hidden link and click it
        var link = document.createElement("a");
        link.setAttribute("href", url);
        link.setAttribute("download", "sample_meter_readings.csv");
        link.style.visibility = 'hidden';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    }
</script>